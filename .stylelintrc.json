{
  "extends": [
    "stylelint-config-idiomatic-order",
    "stylelint-config-standard-scss",
    "stylelint-config-css-modules"
  ],
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "selector-class-pattern": "^[a-zA-Z]+[a-zA-Z0-9]*$"
  }
}
